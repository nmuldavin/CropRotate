{
  "extends": [
    "cleanjs",
    "airbnb-base"
  ],
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "expect": true,
    "sinon": true
  },
  "rules": {
    "fp/no-mutation": ["error", { "commonjs": true }],
    "better/no-new": 0,
    "fp/no-nil": 0,
    "fp/no-unused-expression": 0,
    "no-unused-expressions": 0,
    "better/explicit-return": 0,
    "fp/no-throw": 0,
    "better/no-ifs": 0
  }
}
